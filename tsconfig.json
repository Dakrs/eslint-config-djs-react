{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noEmit": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "build",
    "pretty": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "index.js"
  ]
}
  